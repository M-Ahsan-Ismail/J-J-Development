<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="view_aging_report_wizard_form" model="ir.ui.view">
            <field name="name">aging.report.wizard.form</field>
            <field name="model">aging.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Aging Report Wizard">
                    <group>
                        <field name="partner_ids" widget="many2many_tags" required="1"/>
                        <field name="date" required="1"/>
                        <field name="report_type" required="1"/>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to Open the Wizard -->
        <record id="action_aging_report_wizard" model="ir.actions.act_window">
            <field name="name">JNJ Aging Report</field>
            <field name="res_model">aging.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu Item to Access the Wizard -->
        <menuitem
            id="menu_jnj_aging_report"
            name="JNJ Aging Report"
            parent="account.menu_finance_reports"
            action="action_aging_report_wizard"
            sequence="6"/>
    </data>
</odoo>