<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_gate_pass_outward_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <br/><br/>
                        <div class="col-12" style="text-align: center;">
                            <h1>Outward Gatepass</h1>
                        </div>
                        <br/>
                        <table class="table-sm table-bordered"
                               style="width: 100%; border-collapse: collapse; line-height: 1.5">
                            <tr>
                                <th style="text-align:left;"><strong>Date</strong></th>
                                <td style="border: 1px solid black;">
                                    <t t-if="o.visit_date">
                                        <t t-esc="o.visit_date.strftime('%d-%m-%Y %H:%M:%S')"/>
                                    </t>
                                </td>

                                <th style="width: 20%; text-align: left;"><strong>Driver Name</strong></th>
                                <td style="width: 30%; border: 1px solid black;">
                                    <t t-esc="o.driver_name"/>
                                </td>
                            </tr>

                            <tr>
                                <th style="width: 20%; text-align:left;"><strong>Gate Pass No.</strong></th>
                                <td style="width: 30%; border: 1px solid black;">
                                    <t t-esc="o.sequence_gate_pass"/>
                                </td>
                                <th style="text-align: left;"><strong>Vehicle No.</strong></th>
                                <td style="border: 1px solid black;">
                                    <t t-esc="o.vehicle_number"/>
                                </td>

                            </tr>
                        </table>


                        <br/>
                        <table class="table table-sm table-bordered" width="100%" style="line-height:1;">
                            <thead>
                                <tr style="border-bottom:1px solid black;">
                                    <th style="text-align: center;"><b>Sr No</b></th>
                                    <th style="text-align: center;"><b>Particulars</b></th>
                                    <th style="text-align: center;"><b>U/M</b></th>
                                    <th style="text-align: center;"><b>Qty</b></th>
                                    <th style="text-align: center;"><b>Bags</b></th>
                                    <th style="text-align: center;"><b>Remarks</b></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="counter" t-value="1"/>
                                <t t-set="total_qty" t-value="0.0"/>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td style="text-align: center;"><t t-esc="counter"/></td>
                                        <td style="text-align: left;"><t t-esc="line.product_id.name"/></td>
                                        <td style="text-align: center;"><t t-esc="line.product_uom.name"/></td>
                                        <td style="text-align: right;"><t t-esc="line.qty"
                                                                          t-options='{"widget": "float", "precision": 2}'/></td>
                                        <td style="text-align: left;"></td>
                                        <td style="text-align: left;"></td>
                                    </tr>
                                    <t t-set="total_qty" t-value="total_qty + line.qty"/>
                                    <t t-set="counter" t-value="counter + 1"/>
                                </t>

                                <!-- Totals Row -->
                                <tr>
                                    <td style="text-align: center;"></td>
                                    <td colspan="1" style="text-align: right;"><strong>Total</strong></td>
                                    <td style="text-align: center;"></td>
                                    <td style="text-align: right;"><strong t-esc="total_qty"
                                                                           t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td style="text-align: center;"></td>
                                    <td style="text-align: center;"></td>
                                </tr>
                            </tbody>
                        </table>
                        <br/><br/>
                        <div class="row">
                            <div class="col-2">
                                <span><strong>Prepared By:</strong></span>
                            </div>
                            <div class="col-5">

                                <div style="display: inline-block; border-bottom: 1px solid black; width: 250px; margin-bottom: 5px;">
                                    &#160;</div>
                            </div>
                            <div class="col-2">
                                <span><strong>Store I/C:</strong></span>
                            </div>
                            <div class="col-5">
                                <div style="display: inline-block; border-bottom: 1px solid black; width: 250px; margin-bottom: 5px; text-align: left;"><t
                                        t-esc="o.store_incharge_id.name"/></div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-2">
                                <span><strong>Gate Supervisor</strong></span>
                            </div>
                            <div class="col-5">
                                <div style="display: inline-block; border-bottom: 1px solid black; width: 250px; margin-bottom: 5px; text-align: left;"><t
                                        t-esc="o.guard_id.name"/></div>
                            </div>
                            <div class="col-2">
                                <span><strong>Received By</strong></span>
                            </div>
                            <div class="col-5">
                                <div style="display: inline-block; border-bottom: 1px solid black; width: 250px; margin-bottom: 5px; text-align: left;">
                                    <t t-esc="o.received_by.name"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>